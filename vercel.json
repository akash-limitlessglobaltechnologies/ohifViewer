{
  "version": 2,
  "buildCommand": "cd platform/app && yarn install && yarn run build:web",
  "outputDirectory": "platform/app/dist",
  "installCommand": "echo 'Skipping root install'",
  "env": {
    "PUBLIC_URL": "/",
    "APP_CONFIG": "config/default.js",
    "NODE_OPTIONS": "--max_old_space_size=4096"
  },
  "routes": [
    {
      "src": "/config/(.*)",
      "dest": "/config/$1"
    },
    {
      "src": "/app-config.js",
      "dest": "/app-config.js"
    },
    {
      "src": "/init-service-worker.js",
      "dest": "/init-service-worker.js"
    },
    {
      "src": "/manifest.json",
      "dest": "/manifest.json"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)\\.js",
      "dest": "/$1.js"
    },
    {
      "src": "/(.*)\\.css",
      "dest": "/$1.css"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
