{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "platform/app/dist",
  "installCommand": "npm install && npx lerna bootstrap",
  "routes": [
    {
      "src": "/config/(.*)",
      "dest": "/config/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
